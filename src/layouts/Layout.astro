---
import '@fontsource-variable/libre-franklin';
import { Nav } from '../components/Nav.jsx';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mantén el control de tus tareas con EduTask, la aplicación que te ayuda a gestionar tus tareas diarias, establecer recordatorios y realizar un seguimiento de tu progreso. Colabora en grupos y maximiza tu productividad con nuestra interfaz intuitiva y herramientas eficientes.">
		<meta name="keywords" content="Education Task Groups">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icon.webp" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions/>
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-cBlack text-cWhite bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] 
	bg-[size:24px_24px] bg-fixed mb-12">
		<header>
			<Nav client:visible/>
		</header>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-size: 224px;
		font-family: 'Libre Franklin Variable', sans-serif;
		scroll-behavior: smooth;
	}
	html::-webkit-scrollbar{
		-webkit-appearance: none;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
